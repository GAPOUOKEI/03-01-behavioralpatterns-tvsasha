<Window x:Class="Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paint" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10">
            <Button Content="Добавить круг" Click="AddCircle_Click" Width="150" Margin="5"/>
            <Button Content="Добавить квадрат" Click="AddSquare_Click" Width="150" Margin="5"/>
            <Button Content="Удалить фигуру" Click="RemoveShape_Click" Width="150" Margin="5"/>
            <Button Content="Отменить действие" Click="Undo_Click" Width="150" Margin="5"/>
        </StackPanel>
        
        <Canvas Name="DrawingCanvas" Background="White" Margin="180,10,10,10"/>
    </Grid>
</Window>
